
<div class="container mt-5">
    <div class="row">
        <div class="col">
        </div>
                                {# Простой поиск #}
            <div class="col-6" id="id_lite_sear">
                <h1 class="mb-5">Быстрый поиск</h1>
                <div class="row g-3">
                    <div class="col-12">
                        <input type="text" class="form-control" placeholder="Иванов Иван Ивановчи.." aria-label="Иванов Иван Ивановчи..">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-warning">Найти</button>
                    </div>
                    <div class="col-6 post-right">
                        <button type="btn" class="btn btn-warning" id="id_btn_diff">Расширенный поиск</button>
                    </div>
                </div>
            </div>
                                {#  Расширенный поиск  #}
        <div class="diff-search" id="id_diff_sear">
        {% include 'inc/diff_search.html.twig' %}
        </div>
        <div class="col">
        </div>
    </div>
</div>
{% block javascripts %}
    <script>
        $("#id_btn_diff").on('click' , function (){
          $("#id_diff_sear").removeClass('diff-search');
          $('#id_lite_sear').addClass('diff-search');
        });

    </script>
{%  endblock %}
